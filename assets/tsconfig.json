{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src/js/**/*"],
  "exclude": ["node_modules", "dist"]
}
